{
  "compilerOptions": {
    "target": "es2024",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"],
      "@web/*": ["apps/web/src/*"],
      "@server/*": ["apps/server/src/*"]
    }
  }
}
